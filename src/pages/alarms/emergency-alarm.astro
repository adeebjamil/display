---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Emergency Alarm">
     <!-- Hero Section -->
  <section class="hero-section">
    <div class="container mx-auto px-4 py-20">
      <img 
        src="/src/assets/alarm/heroimg.jpg" 
        alt="Wireless Alarm Systems" 
        class="w-full h-[400px] object-conatin rounded-lg shadow-lg"
      >
  </section>


  <!-- Overview Section -->
  <section id="overview" class="relative py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-red-50 via-orange-50 to-yellow-50"></div>
    <div class="absolute inset-0 bg-[url('/patterns/emergency.svg')] opacity-5 animate-pulse"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16 space-y-6">
          <span class="inline-block px-4 py-1.5 bg-red-100/80 backdrop-blur-sm text-red-600 font-semibold text-sm tracking-wider uppercase rounded-full">
            Emergency Response
          </span>
          <h2 class="text-5xl font-bold mb-6 bg-gradient-to-r from-red-700 to-red-500 bg-clip-text">
            Rapid Response Emergency Systems
          </h2>
          <div class="w-24 h-1.5 bg-gradient-to-r from-red-700 to-red-500 mx-auto rounded-full mb-8"></div>
          <p class="text-xl text-gray-700 leading-relaxed max-w-3xl mx-auto">
            Our emergency alarm systems provide immediate response capabilities with advanced detection and notification features for critical situations.
          </p>
        </div>

        <!-- Feature Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {[
            { value: '<2s', label: 'Response Time', icon: 'âš¡' },
            { value: '24/7', label: 'Monitoring', icon: 'ðŸ‘ï¸' },
            { value: '99.99%', label: 'Reliability', icon: 'ðŸ›¡ï¸' }
          ].map(stat => (
            <div class="relative group">
              <div class="absolute inset-0 bg-gradient-to-r from-red-700 to-red-500 rounded-2xl blur transform group-hover:scale-105 transition-transform duration-300 opacity-20"></div>
              <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 relative transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl border border-red-100">
                <div class="text-4xl mb-2">{stat.icon}</div>
                <div class="text-4xl font-bold text-red-600 mb-3">{stat.value}</div>
                <div class="text-gray-700 font-medium">{stat.label}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Innovation Items -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-16">Key Features</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {[
          {
            title: "Instant Alert System",
            description: "Immediate notification system with multi-channel alerts including sirens, strobes, and mobile notifications.",
            image: "/src/assets/alarm/emergency-feature1.jpg"
          },
          {
            title: "24/7 Monitoring",
            description: "Round-the-clock surveillance and immediate response coordination with emergency services.",
            image: "/src/assets/alarm/emergency-feature2.jpg"
          }
          // Add more features as needed
        ].map(feature => (
          <div class="bg-gray-50 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300">
            <div class="relative h-64">
              <img 
                src={feature.image}
                alt={feature.title}
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
              <div class="absolute bottom-0 p-6 text-white">
                <h3 class="text-2xl font-bold mb-2">{feature.title}</h3>
                <p class="text-gray-200">{feature.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <style>
    /* ... Same animations and styles as wireless-alarm.astro ... */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .animate-fade-in {
      animation: fadeIn 1s ease-out;
    }

    .animate-fade-in-delay {
      animation: fadeIn 1s ease-out 0.3s;
      opacity: 0;
      animation-fill-mode: forwards;
    }
  </style>
</Layout>