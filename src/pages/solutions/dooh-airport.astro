---

<Layout title={title} description={description} sd={sd}>
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="relative bg-white border-b border-gray-200">
      <div class="container mx-auto px-4 py-12 md:py-24">
        <div class="flex flex-col md:flex-row items-center">
          <div class="md:w-1/2 mb-12 md:mb-0 md:pr-12">
            <div class="inline-block px-4 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold mb-6">
              OFFICIAL AUTHORIZED DISTRIBUTOR
            </div>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
              Airport Display <span class="text-blue-600">Distribution Solutions</span>
            </h1>
            <p class="text-lg md:text-xl text-gray-600 mb-8 max-w-2xl">
              The largest selection of flight information displays, wayfinding kiosks, and advertising LED walls specifically designed for airport environments.
            </p>
            <div class="flex flex-wrap gap-4">
              <a href="#products" class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors">
                Browse Products
              </a>
              <a href="#distribution-network" class="px-8 py-3 bg-white border border-gray-300 hover:border-gray-400 text-gray-700 rounded-lg font-medium transition-colors">
                Distribution Network
              </a>
            </div>
            <div class="mt-8 flex items-center text-gray-500">
              <span class="flex items-center mr-6">
                <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                In-stock products
              </span>
              <span class="flex items-center">
                <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Nationwide delivery
              </span>
            </div>
            <div class="mt-4">
              <div class="inline-flex items-center px-3 py-1 bg-green-50 text-green-700 rounded-md text-sm">
                <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                Authorized distributor for 15+ premium display manufacturers
              </div>
            </div>
          </div>
          <div class="md:w-1/2">
            <div class="bg-gray-100 p-2 rounded-xl shadow-lg">
              <img 
                src="/images/hero-airport-displays.webp" 
                alt="Airport Display Solutions" 
                class="w-full rounded-lg"
                width="600"
                height="400"
              />
            </div>
            <div class="mt-4 bg-gray-50 rounded-lg p-4 border border-gray-200">
              <div class="flex items-center mb-2">
                <span class="w-3 h-3 bg-green-500 rounded-full mr-2"></span>
                <span class="font-medium text-gray-700">Available for next-day shipping</span>
              </div>
              <p class="text-sm text-gray-500">Most products ship directly from our distribution centers with tracking and installation support available.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Trusted By Section -->
    <section class="py-12 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-10">
          <h2 class="text-xl font-medium text-gray-600">
            TRUSTED BY MAJOR AIRPORTS ACROSS THE COUNTRY
          </h2>
        </div>
        <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
          <img src="/images/logos/jfk-airport.svg" alt="JFK Airport" class="h-12 opacity-70 hover:opacity-100 transition-opacity" />
          <img src="/images/logos/lax-airport.svg" alt="LAX Airport" class="h-12 opacity-70 hover:opacity-100 transition-opacity" />
          <img src="/images/logos/ord-airport.svg" alt="O'Hare Airport" class="h-12 opacity-70 hover:opacity-100 transition-opacity" />
          <img src="/images/logos/atl-airport.svg" alt="Atlanta Airport" class="h-12 opacity-70 hover:opacity-100 transition-opacity" />
          <img src="/images/logos/dfw-airport.svg" alt="Dallas Fort Worth Airport" class="h-12 opacity-70 hover:opacity-100 transition-opacity" />
        </div>
      </div>
    </section>

    <!-- Featured Products Section -->
    <section id="products" class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold mb-4">
            FEATURED PRODUCTS
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Best-Selling Airport Displays
          </h2>
          <p class="text-gray-600 text-lg max-w-3xl mx-auto">
            High-quality display solutions engineered specifically for the demanding environment of modern airports
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredProducts.map(product => (
            <div class="bg-white border border-gray-200 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">
              <div class="relative">
                <img 
                  src={product.image} 
                  alt={product.name}
                  class="w-full h-64 object-cover"
                  loading="lazy"
                />
                <div class="absolute top-4 right-4">
                  {product.inStock ? 
                    <span class="inline-block bg-green-100 text-green-800 text-xs font-semibold px-3 py-1 rounded-full">In Stock</span> :
                    <span class="inline-block bg-orange-100 text-orange-800 text-xs font-semibold px-3 py-1 rounded-full">Backorder: {product.backorderTime}</span>
                  }
                </div>
                <div class="absolute bottom-4 left-4 bg-blue-600 text-white text-xs uppercase tracking-wider font-semibold px-2 py-1 rounded">
                  Official Distributor
                </div>
              </div>
              <div class="p-6">
                <div class="text-sm text-blue-600 font-medium mb-2">{product.category}</div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">{product.name}</h3>
                <p class="text-gray-600 mb-4">{product.description}</p>
                
                <div class="mb-6">
                  <div class="text-lg font-bold text-gray-900 mb-1">{product.price}</div>
                  <div class="text-sm text-gray-500">
                    Min Order: {product.minOrder} • Delivery: {product.deliveryTime}
                  </div>
                </div>
                
                <div class="mb-6">
                  <h4 class="text-sm font-semibold text-gray-900 mb-2">SPECIFICATIONS</h4>
                  <ul class="space-y-1">
                    {product.specs.map(spec => (
                      <li class="text-sm text-gray-600 flex items-center">
                        <svg class="w-4 h-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        {spec}
                      </li>
                    ))}
                  </ul>
                </div>
                
                <div class="flex gap-2">
                  <a href={`/products/${product.id}`} class="flex-1 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-center rounded-lg font-medium transition-colors">
                    View Details
                  </a>
                  <button class="px-4 py-2 border border-gray-300 hover:border-gray-400 text-gray-700 rounded-lg font-medium transition-colors">
                    Request Quote
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a href="/products/airport-displays" class="inline-flex items-center px-6 py-3 border border-gray-300 hover:border-gray-400 text-gray-700 rounded-lg font-medium transition-colors">
            View All Products
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Our Manufacturers Section (NEW) -->
    <section class="py-16 md:py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold mb-4">
            OUR PARTNERS
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Authorized Manufacturer Relationships
          </h2>
          <p class="text-gray-600 text-lg max-w-3xl mx-auto">
            As an official distributor, we maintain direct relationships with the world's leading display manufacturers
          </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm flex flex-col items-center justify-center">
            <img src="/images/manufacturers/samsung.svg" alt="Samsung" class="h-12 mb-4" />
            <span class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded-full">
              Premium Partner
            </span>
          </div>
          <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm flex flex-col items-center justify-center">
            <img src="/images/manufacturers/lg.svg" alt="LG" class="h-12 mb-4" />
            <span class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded-full">
              Authorized Distributor
            </span>
          </div>
          <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm flex flex-col items-center justify-center">
            <img src="/images/manufacturers/nec.svg" alt="NEC" class="h-12 mb-4" />
            <span class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded-full">
              Certified Reseller
            </span>
          </div>
          <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm flex flex-col items-center justify-center">
            <img src="/images/manufacturers/panasonic.svg" alt="Panasonic" class="h-12 mb-4" />
            <span class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded-full">
              Authorized Distributor
            </span>
          </div>
        </div>
        
        <div class="text-center mt-10">
          <a href="/manufacturers" class="inline-flex items-center text-blue-600 hover:text-blue-800">
            View all manufacturer partnerships
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Display Categories Section -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold mb-4">
            PRODUCT CATEGORIES
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Complete Airport Display Solutions
          </h2>
          <p class="text-gray-600 text-lg max-w-3xl mx-auto">
            Specialized displays for every area of your airport facility
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {displayCategories.map(category => (
            <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow border border-gray-200">
              <img 
                src={category.image} 
                alt={category.name}
                class="w-full h-48 object-cover"
                loading="lazy"
              />
              <div class="p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-3">{category.name}</h3>
                <p class="text-gray-600 text-sm mb-4">{category.description}</p>
                <div class="mb-5">
                  <div class="text-xs font-semibold text-gray-500 mb-2">FEATURED PRODUCTS</div>
                  <ul class="space-y-1">
                    {category.products.map(product => (
                      <li class="text-sm text-gray-600 flex items-center">
                        <svg class="w-3 h-3 mr-1 text-blue-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                        {product}
                      </li>
                    ))}
                  </ul>
                </div>
                <a href={`/categories/${category.name.toLowerCase().replace(/\s+/g, '-')}`} class="text-blue-600 text-sm font-medium hover:text-blue-800 flex items-center">
                  View Category
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Distributor Benefits Section -->
    <section id="distribution-network" class="py-16 md:py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold mb-4">
            WHY CHOOSE US
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Premier Airport Display Distributor
          </h2>
          <p class="text-gray-600 text-lg max-w-3xl mx-auto">
            We provide comprehensive distribution services tailored specifically for airport environments
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {distributorBenefits.map(benefit => (
            <div class="bg-white border border-gray-200 rounded-xl p-6 hover:shadow-md transition-shadow">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-6">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={icons[benefit.icon as keyof typeof icons]} />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-3">{benefit.title}</h3>
              <p class="text-gray-600">{benefit.description}</p>
            </div>
          ))}
        </div>
        
        <div class="mt-12 text-center">
          <a href="#contact" class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors">
            Contact Sales Team
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Distribution Map Section (NEW) -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="flex flex-col lg:flex-row items-center gap-12">
          <div class="lg:w-1/2">
            <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold mb-4">
              NATIONWIDE COVERAGE
            </span>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              Comprehensive Distribution Network
            </h2>
            <p class="text-gray-600 text-lg mb-6">
              Our extensive distribution network ensures timely delivery and installation support across the country.
            </p>
            <ul class="space-y-4">
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
