// UAE locations for SEO
const locations = [
  "Dubai", "Abu Dhabi", "Sharjah", "Ajman", "Fujairah", "Ras Al Khaimah", "Umm Al Quwain"
];

// Structured data for better search visibility with Dubai/UAE focus
const sd = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Retail LED Display Solutions Dubai",
  "description": "Professional display technology for Dubai retail environments including LED walls, video wall solutions, and digital signage systems across UAE",
  "brand": {
    "@type": "Brand",
    "name": "Lovosis Display UAE"
  },
  "category": "Digital Display Technology",
  "image": "https://images.unsplash.com/photo-1567103472667-6898f3a79cf2?ixlib=rb-4.0.3",
  "offers": {
    "@type": "AggregateOffer",
    "priceCurrency": "AED",
    "lowPrice": "7000.00",
    "highPrice": "110000.00",
    "offerCount": "20",
    "availability": "https://schema.org/InStock",
    "areaServed": {
      "@type": "GeoCircle",
      "geoMidpoint": {
        "@type": "GeoCoordinates",
        "latitude": "25.276987",
        "longitude": "55.296249"
      },
      "geoRadius": "200"
    }
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "reviewCount": "180"
  },
  "review": {
    "@type": "Review",
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": "5",
      "bestRating": "5"
    },
    "author": {
      "@type": "Person",
      "name": "Mohammed Al Faisal"
    },
    "datePublished": "2025-02-10",
    "reviewBody": "The Lovosis retail LED display solutions have transformed our Dubai store's visual appeal. The video wall solutions and digital signage systems are incredibly vibrant and have significantly increased customer engagement. The installation across our UAE locations was seamless, and the Dubai support team has been fantastic."
  },
  "audience": {
    "@type": "BusinessAudience",
    "audienceType": "Retail businesses in UAE"
  },
  "isRelatedTo": [
    {
      "@type": "Product",
      "name": "LED Display Solutions for Dubai Retail",
      "description": "High-brightness LED display solutions for Dubai retail environments"
    },
    {
      "@type": "Product",
      "name": "Video Wall Solutions Dubai",
      "description": "Ultra-narrow bezel display panels for Dubai retail visual merchandising"
    },
    {
      "@type": "Product",
      "name": "Digital Signage Solutions UAE",
      "description": "Dynamic digital signage solutions for UAE retail advertising and information"
    }
  ],
  "areaServed": [
    {
      "@type": "Place",
      "name": "Dubai, UAE"
    },
    {
      "@type": "Place", 
      "name": "Abu Dhabi, UAE"
    },
    {
      "@type": "Place",
      "name": "Sharjah, UAE"
    }
  ]
}
---

