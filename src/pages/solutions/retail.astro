---
import Layout from '../../layouts/Layout.astro';
// SEO-optimized title and description
const title = "Retail Display Solutions | LED & LCD Video Walls | Digital Signage | Lovosis Display"
const description = "Transform your retail space with cutting-edge LED displays, LCD video walls, and digital signage solutions. Enhance brand visibility, improve customer engagement, and boost sales with professional retail display technology."

// Structured data for better search visibility
const sd = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Retail Display Solutions",
  "description": "Professional display technology for retail environments including LED walls, LCD displays, and digital signage systems",
  "brand": {
    "@type": "Brand",
    "name": "Lovosis Display"
  },
  "category": "Digital Display Technology",
  "offers": {
    "@type": "AggregateOffer",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock"
  },
  "image": "https://images.unsplash.com/photo-1567103472667-6898f3a79cf2?ixlib=rb-4.0.3",
  "audience": {
    "@type": "BusinessAudience",
    "audienceType": "Retail businesses"
  },
  "isRelatedTo": [
    {
      "@type": "Product",
      "name": "LED Display Walls for Retail",
      "description": "High-brightness LED display solutions for retail environments"
    },
    {
      "@type": "Product",
      "name": "LCD Video Walls for Stores",
      "description": "Ultra-narrow bezel LCD display panels for retail visual merchandising"
    },
    {
      "@type": "Product",
      "name": "Digital Signage Systems",
      "description": "Dynamic digital signage solutions for retail advertising and information"
    }
  ]
}
---

<Layout title={title} description={description} sd={sd}>
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <section class="relative h-screen flex items-center justify-center">
      <div class="absolute inset-0 z-0">
        <img 
          src="https://images.unsplash.com/photo-1567103472667-6898f3a79cf2?ixlib=rb-4.0.3" 
          alt="Retail Solutions Hero"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      </div>
      
      <div class="relative z-10 text-center text-white px-4">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in">
          Retail Solutions
        </h1>
        <p class="text-xl md:text-2xl max-w-3xl mx-auto animate-fade-in-delayed">
          Transform your retail space with cutting-edge digital solutions
        </p>
      </div>
    </section>

    <!-- Industry Requirements Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">Industry Requirements</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Requirement Card 1 -->
          <div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow">
            <div class="h-16 w-16 bg-blue-500 rounded-full flex items-center justify-center mb-6 mx-auto">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-center mb-4">Product Visibility</h3>
            <p class="text-gray-600 text-center">Good commodities deserve more attention. Showcase your products effectively to attract potential customers.</p>
          </div>

          <!-- Requirement Card 2 -->
