
---
import Layout from '../layouts/Layout.astro';

// SEO metadata
const title = "Sitemap | Lovosis Display | Navigate Our Website Easily";
const description = "Browse the complete structure of Lovosis Display's website. Find all our products, solutions, support resources and company information in one organized view.";

// Site structure data
const siteStructure = {
  Products: {
    icon: "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
    items: [
      { name: "Interactive Display", url: "/Products/interactive-display" },
      { name: "LED Display", url: "/Products/led-display" },
      { name: "LCD Video Wall", url: "/Products/lcd-video" },
      { name: "Controller", url: "/Products/wall-controller" },
      { name: "Monitors", url: "/Products/monitors-video" },
      { name: "Conferencing Products", url: "/Products/conferencing-products" }
    ]
  },
  Solutions: {
    icon: "M13 10V3L4 14h7v7l9-11h-7z",
    items: [
      { name: "Retail", url: "/solutions/retail" },
      { name: "Corporate", url: "/solutions/corporate" },
      { name: "Education", url: "/solutions/education" },
      { name: "Control Room", url: "/solutions/control-room" },
      { name: "DOOH Airport", url: "/solutions/dooh-airport" },
    ]
  },
  Support: {
    icon: "M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z",
    items: [
      { name: "Download Center", url: "/support/download-center" },
      { name: "How To", url: "/support/how-to" }
    ]
  },
  Company: {
    icon: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4",
    items: [
      { name: "About Us", url: "/company/about-us" },
      { name: "Contact Us", url: "/company/contact-us" },
      { name: "Partners", url: "/company/partners" }
    ]
  }
};
---

<Layout title={title} description={description}>
  <main>
    <section class="relative py-12 sm:py-16 lg:py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight text-gray-900">
            <span class="inline-block pb-2">Site Map</span>
            <span class="block w-24 h-1 bg-gradient-to-r from-blue-600 to-indigo-600 mx-auto mt-4"></span>
          </h1>
          <p class="mt-5 max-w-2xl mx-auto text-xl text-gray-600">
            Browse the complete structure of our website
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mt-12">
          {Object.entries(siteStructure).map(([section, data]) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl">
              <div class="bg-gradient-to-r from-blue-500 to-indigo-600 p-6">
                <div class="flex items-center">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={data.icon}></path>
                  </svg>
                  <h2 class="ml-3 text-2xl font-bold text-white">{section}</h2>
                </div>
              </div>
              <ul class="divide-y divide-gray-200 p-2">
                {data.items.map(item => (
                  <li>
                    <a 
                      href={item.url} 
                      class="py-3 px-4 hover:bg-blue-50 rounded-lg flex items-center justify-between group transition-colors duration-200"
                    >
                      <span class="text-gray-800 group-hover:text-blue-700 font-medium">{item.name}</span>
                      <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>

        <div class="mt-16 text-center">
          <p class="text-gray-500 text-sm">
            Last updated: {new Date().toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric'})}
          </p>
        </div>
      </div>
    </section>
  </main>
</Layout>