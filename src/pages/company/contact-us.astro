---
import Layout from '../../layouts/Layout.astro';

const images = {
  hero: "https://img.freepik.com/free-photo/modern-business-center-with-glass-walls_1127-2880.jpg",
  pattern: "https://img.freepik.com/free-vector/abstract-pattern-design_1273-159.jpg"
};

const officeLocations = [
  {
    city: 'Mumbai',
    address: '123 Business Park, Andheri East',
    phone: '+91 22 1234 5678',
    email: 'mumbai@unv.com',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>`
  },
  {
    city: 'Delhi',
    address: '456 Tech Hub, Gurugram',
    phone: '+91 11 8765 4321',
    email: 'delhi@unv.com',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
    </svg>`
  }
];
---

<Layout title="Contact Us | Lovosis">
  <main class="min-h-screen">
    {/* Hero Section */}
    <section class="relative h-[60vh] overflow-hidden">
      {/* Background Image */}
      <div class="absolute inset-0">
        <img 
          src={images.hero}
          alt="Contact Us Header"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/90 to-gray-900/75"></div>
        
        {/* Pattern Overlay */}
        <div class="absolute inset-0 opacity-5 mix-blend-overlay">
          <img 
            src={images.pattern}
            alt=""
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      {/* Content */}
      <div class="relative h-full container mx-auto px-4">
        <div class="h-full flex flex-col justify-center items-center text-center">
          <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
            Get in <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">Touch</span>
          </h1>
          <p class="text-xl text-gray-300 max-w-2xl">
            Have questions? We're here to help. Contact our team for support or business inquiries.
          </p>
          
          {/* Decorative Line */}
          <div class="mt-8 w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500"></div>
        </div>
      </div>

      {/* Animated Blobs */}
      <div class="absolute -top-24 -right-24 w-96 h-96 bg-gradient-to-br from-blue-500/20 to-purple-500/20 rounded-full blur-3xl animate-blob"></div>
      <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-gradient-to-br from-purple-500/20 to-blue-500/20 rounded-full blur-3xl animate-blob animation-delay-2000"></div>
    </section>

    {/* Contact Form Section */}
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-16">
          {/* Contact Form */}
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Send us a Message</h2>
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                  <input type="text" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all duration-300" />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                  <input type="text" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all duration-300" />
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                <input type="email" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all duration-300" />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                <textarea rows="6" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all duration-300"></textarea>
              </div>
              <button class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold py-4 px-8 rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:-translate-y-0.5">
                Send Message
              </button>
            </form>
          </div>

          {/* Office Locations */}
          <div class="space-y-8">
            <h2 class="text-3xl font-bold text-gray-900">Our Offices</h2>
            <div class="grid gap-8">
              {officeLocations.map(office => (
                <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
                  <div class="flex items-start space-x-4">
                    <div class="p-3 bg-gradient-to-br from-blue-500/10 to-purple-500/10 rounded-lg">
                      <div class="text-blue-600" set:html={office.icon} />
                    </div>
                    <div>
                      <h3 class="text-xl font-semibold text-gray-900 mb-2">{office.city}</h3>
                      <p class="text-gray-600 mb-4">{office.address}</p>
                      <div class="space-y-2">
                        <p class="flex items-center text-gray-600">
                          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                          </svg>
                          {office.phone}
                        </p>
                        <p class="flex items-center text-gray-600">
                          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                          </svg>
                          {office.email}
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>

            {/* Map Section */}
            <div class="bg-white rounded-xl overflow-hidden shadow-lg">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3771.1124717681275!2d72.8516624!3d19.0725451!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTnCsDA0JzM3LjYiTiA3MsKwNTEnMDguNiJF!5e0!3m2!1sen!2sin!4v1645517558744!5m2!1sen!2sin"
                width="100%"
                height="400"
                style="border:0;"
                loading="lazy"
                class="grayscale"
              ></iframe>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>