        <h2 class="text-3xl font-bold text-center mb-12">Related LED Panel Products in UAE</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {relatedProducts.map(related => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
              <div class="h-48 overflow-hidden">
                <img 
                  src={related.image} 
                  alt={`${related.name} - LED Panel in UAE`}
                  class="w-full h-full object-contain"
                />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-2">{related.name}</h3>
                <p class="text-gray-600 mb-4 line-clamp-2">{related.description}</p>
                
                <div class="flex flex-wrap gap-2 mb-6">
                  {related.features.slice(0, 3).map(feature => (
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-700">
                      {feature}
                    </span>
                  ))}
                </div>
                
                <a 
                  href={`/Product/${related.slug}`}
                  class="w-full block text-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                >
                  View Details
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
