---
import logo from '../assets/Lovosis_logo.png';
import img1 from '../assets/Navbar/img1.jpg';
import img2 from '../assets/Navbar/img2.jpg';
import img3 from '../assets/Navbar/img3.jpg';
import img4 from '../assets/Navbar/img4.jpg';
import img5 from '../assets/Navbar/img5.jpg';
---

<style>
  .mobile-menu-enter {
    transform: translateX(100%);
  }
  .mobile-menu-enter-active {
    transform: translateX(0);
    transition: transform 300ms ease-in-out;
  }
  .mobile-menu-exit {
    transform: translateX(0);
  }
  .mobile-menu-exit-active {
    transform: translateX(100%);
    transition: transform 300ms ease-in-out;
  }
</style>

<nav class="fixed top-0 left-0 right-0 w-full z-50 bg-white dark:bg-gray-900 shadow-lg transition-transform duration-300">
  <!-- Gradient header -->
  <div class="w-full bg-gradient-to-r from-purple-600 to-blue-800 text-white py-2">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-end items-center space-x-4">
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img src={logo.src} alt="Company Logo" class="h-12 w-auto"/>
      </a>

      <!-- Mobile menu button -->
      <button 
        id="mobile-menu-button"
        class="lg:hidden p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex lg:items-center lg:space-x-8">
        <!-- Products Dropdown -->
        <div class="relative group">
          <button class="flex items-center px-3 py-2 text-xl text-gray-600 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 font-bold">
            <span>Products</span>
            <svg class="ml-2 w-4 h-4 transition-transform duration-200 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          
          <!-- Products Dropdown Menu -->
          <div class="absolute left-0 mt-2 w-80 bg-white dark:bg-gray-900 shadow-xl rounded-lg opacity-0 invisible 
            group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="p-4">
              <img src={img1.src} alt="Products" class="w-full h-32 object-cover rounded-lg mb-4"/>
              <div class="space-y-2">
                <a href="/Products/interactive-display" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Interactive Display</a>
                <a href="/Products/led-display" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">LED Display</a>
                <a href="/Products/lcd-video" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">LCD Video</a>
                <a href="/Products/wall-controller" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Wall Controller</a>
                <a href="/Products/monitors-video" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Monitors Video</a>
                <a href="/Products/conferencing-products" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Conferencing Products</a>
                <a href="/Products/Overview" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Overview</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Solutions Dropdown -->
        <div class="relative group">
          <button class="flex items-center px-3 py-2 text-xl text-gray-600 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 font-bold">
            <span>Solutions</span>
            <svg class="ml-2 w-4 h-4 transition-transform duration-200 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          
          <!-- Solutions Dropdown Menu -->
          <div class="absolute left-0 mt-2 w-80 bg-white dark:bg-gray-900 shadow-xl rounded-lg opacity-0 invisible 
            group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="p-4">
              <img src={img2.src} alt="Solutions" class="w-full h-32 object-cover rounded-lg mb-4"/>
              <div class="space-y-2">
                <a href="/solutions/retail" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Retail</a>
                <a href="/solutions/corporate" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Corporate</a>
                <a href="/solutions/education" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Education</a>
                <a href="/solutions/control-room" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Control Room</a>
                <a href="/solutions/dooh-airport" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">DOOH Airport</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Support Dropdown -->
        <div class="relative group">
          <button class="flex items-center px-3 py-2 text-xl text-gray-600 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 font-bold">
            <span>Support</span>
            <svg class="ml-2 w-4 h-4 transition-transform duration-200 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          
          <!-- Support Dropdown Menu -->
          <div class="absolute left-0 mt-2 w-80 bg-white dark:bg-gray-900 shadow-xl rounded-lg opacity-0 invisible 
            group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="p-4">
              <img src={img3.src} alt="Support" class="w-full h-32 object-cover rounded-lg mb-4"/>
              <div class="space-y-2">
                <a href="/support/download-center" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Download Center</a>
                <a href="/support/how-to" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">How To</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Company Dropdown -->
        <div class="relative group">
          <button class="flex items-center px-3 py-2 text-xl text-gray-600 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 font-bold">
            <span>Company</span>
            <svg class="ml-2 w-4 h-4 transition-transform duration-200 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          
          <!-- Company Dropdown Menu -->
          <div class="absolute left-0 mt-2 w-80 bg-white dark:bg-gray-900 shadow-xl rounded-lg opacity-0 invisible 
            group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="p-4">
              <img src={img4.src} alt="Company" class="w-full h-32 object-cover rounded-lg mb-4"/>
              <div class="space-y-2">
                <a href="/company/about-us" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">About Us</a>
                <a href="/company/contact-us" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Contact Us</a>
                <a href="/company/partners" class="block text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Partners</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div 
    id="mobile-menu-overlay"
    class="fixed inset-0 bg-black bg-opacity-50 z-40 opacity-0 pointer-events-none transition-opacity duration-300 lg:hidden"
  ></div>

  <!-- Mobile Menu Panel -->
  <div
    id="mobile-menu"
    class="fixed top-0 right-0 w-[80%] max-w-sm h-full bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-800 z-50 transform translate-x-full transition-all duration-300 ease-in-out lg:hidden overflow-hidden"
  >
    <div class="h-full overflow-y-auto">
      <!-- Mobile Menu Header -->
      <div class="bg-gradient-to-r from-purple-600 to-blue-800 p-6">
        <div class="flex justify-between items-center">
          <img src={logo.src} alt="Company Logo" class="h-8 w-auto"/>
          <button id="close-mobile-menu" class="p-2 text-white hover:text-gray-200 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Menu Content -->
      <div class="py-6 px-4">
        {['products', 'solutions', 'support', 'company'].map((section) => (
          <div class="mb-4">
            <button 
              id={`mobile-${section}-button`}
              class="flex items-center justify-between w-full p-4 rounded-lg bg-white dark:bg-gray-800 shadow-sm hover:shadow-md transition-all duration-200"
            >
              <span class="text-lg font-semibold capitalize text-gray-800 dark:text-gray-200">
                {section}
              </span>
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <div id={`mobile-${section}-menu`} class="hidden mt-2">
              <div class="ml-4 p-4 space-y-3 border-l-2 border-blue-500">
                {section === 'products' && (
                  <>
                    <a href="/Products/interactive-display" class="block text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                      <span class="flex items-center gap-2">
                        <span class="w-2 h-2 bg-blue-500 rounded-full"></span>
